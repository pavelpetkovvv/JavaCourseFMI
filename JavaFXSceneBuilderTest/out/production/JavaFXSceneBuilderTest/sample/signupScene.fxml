<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <GridPane prefHeight="222.0" prefWidth="326.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#handleSignUpButtonAction" text="Sign up" GridPane.rowIndex="2">
                    <GridPane.margin>
                  <Insets left="30.0" />
                    </GridPane.margin></Button>
                <PasswordField fx:id="newPasswordField" promptText="Password" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="30.0" right="60.0" />
                    </GridPane.margin>
                </PasswordField>
                <TextField fx:id="newUsernameField" promptText="Username">
                    <GridPane.margin>
                        <Insets left="30.0" right="60.0" />
                    </GridPane.margin>
                </TextField>
            <Button mnemonicParsing="false" onAction="#handleIAlreadyHaveAccountButtonAction" text="I already have account" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets left="30.0" />
               </GridPane.margin>
            </Button>
            </children>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </GridPane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>
